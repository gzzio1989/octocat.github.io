    <script>
        // ãƒã‚±ãƒƒãƒˆç™ºå£²æ—¥ï¼ˆ2025å¹´3æœˆ5æ—¥ï¼‰
        const releaseDate = new Date("March 5, 2025 20:00:00").getTime();

        // ã‚«ã‚¦ãƒ³ãƒˆãƒ€ã‚¦ãƒ³ã‚¿ã‚¤ãƒãƒ¼ã‚’æ›´æ–°ã™ã‚‹é–¢æ•°
        const countdown = document.getElementById("countdown");
        const interval = setInterval(function() {
            const now = new Date().getTime();
            const distance = releaseDate - now;

            if (distance < 0) {
                clearInterval(interval);
                countdown.innerHTML = "ãƒã‚±ãƒƒãƒˆç™ºå£²ä¸­ï¼";
            } else {
                const days = Math.floor(distance / (1000 * 60 * 60 * 24));
                const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
                const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
                const seconds = Math.floor((distance % (1000 * 60)) / 1000);
                countdown.innerHTML = `ãƒã‚±ãƒƒãƒˆç™ºå£²ã¾ã§: ${days}æ—¥ ${hours}æ™‚é–“ ${minutes}åˆ† ${seconds}ç§’`;
